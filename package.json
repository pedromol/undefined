{
  "name": "undefined",
  "version": "0.0.1",
  "description": "A Nest boilerplate with TypeORM and Redis Cache using Docker and docker-compose.",
  "author": "Mol",
  "private": true,
  "license": "MIT",
  "main": "./dist/main.js",
  "engines": {
    "node": ">=14.16.1",
    "yarn": ">=1.22.5"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prune": "yarn install --production --ignore-scripts --prefer-offline",
    "postinstall": "husky install",
    "prepare": "husky install",
    "update": "npx npm-check-updates -u && yarn install"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/mapped-types": "^1.0.0",
    "@nestjs/platform-fastify": "^8.0.6",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/terminus": "^8.0.0",
    "@nestjs/typeorm": "^8.0.2",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "fastify": "^3.20.2",
    "fastify-swagger": "^4.9.1",
    "hyperid": "^2.3.1",
    "joi": "^17.4.2",
    "joi-decorator": "^1.0.1",
    "mysql2": "^2.3.0",
    "nestjs-pino": "^2.2.0",
    "newrelic": "^8.2.0",
    "pino-http": "^5.7.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.3.0",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.6",
    "@types/jest": "^27.0.1",
    "@types/node": "14.17.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sql.js": "^1.6.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "*.js": "eslint --cache --fix"
  }
}
